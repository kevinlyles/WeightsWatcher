							</Layer>
						</Layers>
						<Scripts>
							<OnClick>
								configClassSelect("HUNTER")
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
			</Frame>
			<!--Right Frame for viewing the weights for each class-->
			<Frame>
				<Size>
					<AbsDimension x="300" y="400"/>
				</Size>
				<Anchors>
					<Anchor point="RIGHT"/>
				</Anchors>
				<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="10"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="10"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="0" right="0" top="5" bottom="5"/>
					</BackgroundInsets>
				</Backdrop>
			</Frame>
		</Frames>
	</Frame>
</Ui>
